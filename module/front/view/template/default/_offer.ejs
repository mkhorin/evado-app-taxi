<template id="offer">
    <div class="loadable-container">
        <template v-show="!loading">

            <div class="form">
                <div class="form-attr form-group row">
                    <label class="col-md-3 col-form-label">ID</label>
                    <div class="col-md-9">
                        <p class="form-control-plaintext">{{id}}</p>
                    </div>
                </div>
                <div class="form-attr form-group row">
                    <label class="col-md-3 col-form-label" data-t="meta">State</label>
                    <div class="col-md-9">
                        <p class="form-control-plaintext"><b data-t="meta">{{stateTitle}}</b></p>
                    </div>
                </div>
                <div class="form-attr form-group row">
                    <label class="col-md-3 col-form-label" data-t="meta">Price</label>
                    <div class="col-md-9">
                        <p class="form-control-plaintext">{{price}}</p>
                    </div>
                </div>
                <div class="form-attr form-group row">
                    <label class="col-md-3 col-form-label" data-t="meta">Additional info</label>
                    <div class="col-md-9">
                        <p class="form-control-plaintext">{{info}}</p>
                    </div>
                </div>
                <div class="form-attr form-group row">
                    <label class="col-md-3 col-form-label" data-t="meta">Driver</label>
                    <div class="col-md-9">
                        <p class="form-control-plaintext">{{driverName}}</p>
                    </div>
                </div>
                <div class="form-attr form-group row">
                    <label class="col-md-3 col-form-label" data-t="meta">Order</label>
                    <div class="col-md-9">
                        <p class="form-control-plaintext">
                            <a @click.prevent="onOrder(order)" href="#">#{{order}}</a>
                        </p>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-md-3 col-md-9">

                        <template v-if="isClient()">
                            <button v-if="newly" @click="onAccept" class="btn-success btn" type="button">
                                <span data-t="meta">Accept</span>
                            </button>
                        </template>

                        <template v-if="isDriver()">
                            <button v-if="accepted" @click="onConfirm" class="btn-success btn" type="button">
                                <span data-t="meta">Confirm</span>
                            </button>
                            <button v-if="newly || accepted" @click="onDelete" class="btn-danger btn" type="button">
                                <span data-t="">Delete</span>
                            </button>
                            <button v-if="inProgress" @click="onComplete" class="btn-success btn" type="button">
                                <span data-t="">Complete</span>
                            </button>
                        </template>
                    </div>
                </div>
            </div>
        </template>

        <div v-show="loading" class="loader">
            <i class="fa fa-spinner fa-spin"></i>
        </div>
    </div>
</template>