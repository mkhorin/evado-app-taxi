<div class="offer-modal modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" data-t="meta">Offer</h4>
            </div>
            <div class="modal-body">
                <div class="modal-error alert-danger alert hidden"></div>
                <div class="loadable-container" data-handler="Offer">

                    <template data-id="offer">
                        <div class="form-horizontal form">
                            <div class="form-attr form-group">
                                <label class="col-md-3 control-label" data-t="meta">State</label>
                                <div class="col-md-9">
                                    <p class="form-control-static"><b data-t="meta">{{state}}</b></p>
                                </div>
                            </div>
                            <div class="form-attr form-group">
                                <label class="col-md-3 control-label" data-t="meta">Price</label>
                                <div class="col-md-9">
                                    <p class="form-control-static">{{price}}</p>
                                </div>
                            </div>
                            <div class="form-attr form-group">
                                <label class="col-md-3 control-label" data-t="meta">Additional info</label>
                                <div class="col-md-9">
                                    <p class="form-control-static">{{info}}</p>
                                </div>
                            </div>
                            <div class="form-attr form-group">
                                <label class="col-md-3 control-label" data-t="meta">Driver</label>
                                <div class="col-md-9">
                                    <p class="form-control-static">{{driver}}</p>
                                </div>
                            </div>
                            <div class="form-attr form-group">
                                <label class="col-md-3 control-label" data-t="meta">Order</label>
                                <div class="col-md-9">
                                    <p class="form-control-static">
                                        <a href="#" data-action="viewOrder" data-id="{{order}}">#{{order}}</a>
                                    </p>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-9">
                                    {{accept}}
                                    {{confirm}}
                                    {{deletion}}
                                    {{complete}}
                                </div>
                            </div>
                        </div>
                    </template>

                    <template data-id="accept">
                        <button class="btn-success btn" type="button" data-command="acceptOffer">
                            <span data-t="meta">Accept</span>
                        </button>
                    </template>

                    <template data-id="confirm">
                        <button class="btn-success btn" type="button" data-command="confirmOffer">
                            <span data-t="meta">Confirm</span>
                        </button>
                    </template>

                    <template data-id="deletion">
                        <button class="btn-danger btn" type="button" data-command="deleteOffer">
                            <span data-t="">Delete</span>
                        </button>
                    </template>

                    <template data-id="complete">
                        <button class="btn-success btn" type="button" data-command="completeOffer">
                            <span data-t="">Complete</span>
                        </button>
                    </template>


                    <template data-id="error">
                        <div class="alert-danger alert">{{text}}</div>
                    </template>

                    <div class="loadable-content"></div>
                    <div class="loader"><i class="fa fa-spinner fa-spin"></i></div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn-default btn" data-dismiss="modal">
                    <span data-t="">Close</span>
                </button>
            </div>
        </div>
    </div>
</div>