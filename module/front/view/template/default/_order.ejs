
<div class="page" data-page="order" data-handler="OrderPage">

    <div class="order loadable-container" data-handler="Order">

        <template data-id="order">
            <div class="page-head">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#" data-action="main" data-t="">Main</a></li>
                    <li class="breadcrumb-item"><a href="#" data-action="orders" data-t="meta">Orders</a></li>
                    <li class="breadcrumb-item" data-t="">#{{_id}}</li>
                </ol>
            </div>

            <div class="form">
                <div class="form-group row">
                    <label class="col-4 col-form-label" data-t="meta">State</label>
                    <div class="col-8">
                        <div class="form-control-plaintext"><b data-t="meta">{{state}}</b></div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-4 col-form-label" data-t="">Departure address</label>
                    <div class="col-8">
                        <div class="form-control-plaintext">{{start}}</div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-4 col-form-label" data-t="">Destination address</label>
                    <div class="col-8">
                        <div class="form-control-plaintext">{{end}}</div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-4 col-form-label" data-t="">Desired price</label>
                    <div class="col-8">
                        <div class="form-control-plaintext"><b>{{price}}</b></div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-4 col-form-label" data-t="meta">Additional info</label>
                    <div class="col-8">
                        <div class="form-control-plaintext">{{info}}</div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-4 col-8">
                        {{ready}}
                        {{deletion}}
                        {{complete}}
                    </div>
                </div>
            </div>

            <div class="block mt-4">
                <h3 class="block-title" data-t="">Driver offers</h3>
                <%- include('./_orderOffers') %>
            </div>
        </template>

        <template data-id="ready">
            <button class="btn-success btn" type="button" data-command="readyOrder">
                <span data-t="meta">Ready</span>
            </button>
        </template>

        <template data-id="draft">
            <button class="btn-primary btn" type="button" data-command="draftOrder">
                <span data-t="meta">Draft</span>
            </button>
        </template>

        <template data-id="deletion">
            <button class="btn-danger btn" type="button" data-command="deleteOrder">
                <span data-t="">Delete</span>
            </button>
        </template>

        <template data-id="complete">
            <button class="btn-success btn" type="button" data-command="completeOrder">
                <span data-t="">Complete</span>
            </button>
        </template>

        <template data-id="error">
            <div class="alert-danger alert">{{text}}</div>
        </template>

        <div class="loadable-content"></div>
        <div class="loader"><i class="fa fa-spinner fa-spin"></i></div>
    </div>
</div>