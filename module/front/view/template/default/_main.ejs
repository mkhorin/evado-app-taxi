
<div class="page" data-page="main" data-handler="MainPage">

    <h1 data-t="">Taxi Ordering Network</h1>

    <% if (isGuest || isClient) { %>
    <%- include(_view.get('default/_mainClient')) %>
    <% } %>

    <% if (isGuest || isDriver) { %>
    <%- include(_view.get('default/_mainDriver')) %>
    <% } %>

    <div class="mt-4">
        <% if (isGuest) { %>
        <a href="auth/sign-in?returnUrl=/front" class="btn-primary btn" data-t="">Sign in or Register</a>
        <% } else if (isClient) { %>
        <button class="btn-primary btn" data-action="orders" data-t="meta">My orders</button>
        <% } else if (isDriver) { %>
        <button class="btn-primary btn" data-action="offers" data-t="meta">My offers</button>
        <button class="btn-danger btn" data-action="waitingOrders" data-t="meta">Waiting orders</button>
        <% } else { %>
        <div class="alert alert-warning" data-t="">Please login as client or driver to continue</div>
        <% } %>
    </div>
</div>